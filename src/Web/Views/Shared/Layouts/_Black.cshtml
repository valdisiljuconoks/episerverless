@using System.Web.Optimization
@using EPiServer.Framework.Web.Mvc.Html
@using Web1.Business
@model IPageViewModel<SitePageData>

<!DOCTYPE html>
<html lang="@Model.CurrentPage.LanguageBranch">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=10" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@Model.CurrentPage.MetaTitle</title>
        <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")" type="image/x-icon" />
        @Html.CanonicalLink()
        @Html.AlternateLinks()
        @Html.RequiredClientResources("Header") @*Enable components to require resources. For an example, see the view for VideoBlock.*@

        <link href="~/ClientResources/Styles/bootstrap.min.css" rel="stylesheet" />

        <style>
            @@font-face {
                font-family: 'fira_coderegular';
                src: url('/ClientResources/Fonts/FiraCode-Regular-webfont.eot');
                src: url('/ClientResources/Fonts/FiraCode-Regular-webfont.eot?#iefix') format('embedded-opentype'),
                     url('/ClientResources/Fonts/FiraCode-Regular-webfont.woff') format('woff'),
                     url('/ClientResources/Fonts/FiraCode-Regular-webfont.ttf') format('truetype'),
                     url('/ClientResources/Fonts/FiraCode-Regular-webfont.svg#fira_coderegular') format('svg');
                font-weight: normal;
                font-style: normal;

            }

             body {
                 background-color: black;
                 font-family: 'fira_coderegular';
                 font-size: 14px;
                 color: #39FF14;
                 margin: 0;
             }

            .container {
                margin-top: 50px;
            }

            .content {
                text-align: justify;
                column-count: 2;
                column-gap: 30px;
            }

            h1 {
                font-size: 28px;
                margin-bottom: 50px;
            }

            label {
                font-weight: normal;
                font-style: italic;
                margin-bottom: 25px;
            }

            .code {
                line-height: 1.0;
                font-size: 9px;
                margin: 25px 0;
            }
        </style>
    </head>

    <body>
        @if (Model.Layout.IsInReadonlyMode)
        {
            Html.RenderPartial("Readonly", Model);
        }

        @Html.RenderEPiServerQuickNavigator()
        @Html.FullRefreshPropertiesMetaData()
        <div class="container text-center">
            @RenderBody()
        </div>
        @Html.RequiredClientResources("Footer")
    </body>
</html>
